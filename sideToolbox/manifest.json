{
    "name": "SIDE Toolbox",
    "description": "A bunch of tools to make SIDE a better place ðŸ‘Œ",
    "version": "2",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "/PopUp/main.html"
    },
    "background": {
        "scripts": ["ScriptTargets/global.js"],
        "persistent": false
      },
    "content_scripts": [
        {
            "matches": [
                "*://www.campus.utad.pt/registoacademico/PlanoEstudos/*"
            ],
            "js": [
                "ScriptTargets/RegistoAcademico/PlanoEstudos/average_grades.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}